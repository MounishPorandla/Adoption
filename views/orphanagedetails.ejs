<%- include("header") -%>
<link rel="stylesheet" href="css/orphanagedetails.css">

</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="/">Orphanage</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse mr-right" id="navbarSupportedContent">

    </div>
  </nav>
  <!-- ////////////// -->
  <div class="form1">
    <form action="/orphanagedetails" method="POST" enctype="multipart/form-data">
      <div class="title">Welcome</div>
      <div class="subtitle">Add your Orphanage details!</div>
      <div class="row">
        <div class="col-md">
          <div class="input-container ic2">
            <input id="Orphanagename" type="text" class="input form-control" name="Orphanagename" placeholder=" " autocomplete="off">
            <div class="cut cut-wider"></div>
            <label for="Orphanagename" class="placeholder">Orphanage Name</label>
          </div>
        </div>
        <div class="col-md">
          <div class="input-container ic2">
            <input id="AdoptID" type="text" class="input form-control" name="AdoptID" placeholder=" " autocomplete="off">
            <div class="cut"></div>
            <label for="inputPassword4" class="placeholder">AdoptID</label>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-md">
          <div class="input-container ic2">
            <input id="phonenumber" type="text" name="phonenumber" class="input form-control" placeholder=" " />
            <div class="cut cut-wider"></div>
            <label for="inputAddress2" class="placeholder">Phone number</label>
          </div>
        </div>
        <div class="col-md">
          <div class="input-container ic2">
            <input id="Email" type="email" name="email" class="input form-control" placeholder=" " />
            <div class="cut cut-short"></div>
            <label for="inputZip" class="placeholder">Email</label>
          </div>
        </div>
      </div>

      <div class="input-container ic2">
        <input id="Address" type="text" class="input form-control" name="Address" placeholder=" " />
        <div class="cut"></div>
        <label for="inputAddress" class="placeholder" autocomplete="off">Address</label>
      </div>

      <div class="input-container ic2">
        <textarea id="description" type="text" class="input form-control" name="description" placeholder=" " rows="4" cols="50" required>

        </textarea>
        <div class="cut"></div>
        <label for="inputAddress" class="placeholder" autocomplete="off">description</label>
      </div>

      <div class="row">
        <div class="col-md">
          <div class="input-container ic2">
            <input id="City" type="text" class="input form-control" name="city" placeholder=" " />
            <div class="cut cut-short"></div>
            <label for="inputCity" class="placeholder">City</label>
          </div>
        </div>
        <div class="col-md-4">
          <div class="input-container ic2">
            <select id="State" name="state" class="input form-control" placeholder=" " />
            <option selected>State</option>
            <option>Andhra pradesh</option>
            <option>Arunachal pradesh</option>
            <option>Assam</option>
            <option>bihar</option>
            <option>chattisgarh</option>
            <option>goa</option>
            <option>gujarat</option>
            <option>haryana</option>
            <option>himachal pradesh</option>
            <option>jharkhand</option>
            <option>karnataka</option>
            <option>kerala</option>
            <option>madhya pradesh</option>
            <option>maharastra</option>
            <option>manipur</option>
            <option>meghalaya</option>
            <option>mizoram</option>
            <option>nagaland</option>
            <option>odisa</option>
            <option>punjab</option>
            <option>rajasthan</option>
            <option>sikkim</option>
            <option>tamilnadu</option>
            <option>telangana</option>
            <option>tripura</option>
            <option>uttarakhand</option>
            <option>uttar pradesh</option>
            <option>west bengal</option>
            </select>
            <div class="cut"></div>

            <label for="inputState" class="placeholder">state</label>
          </div>
        </div>
        <div class="col-md-2">
          <div class="input-container ic2">
            <input id="pincode" type="text" name="pincode" class="input form-control" placeholder=" " />
            <div class="cut"></div>
            <label for="inputZip" class="placeholder">pincode</label>
          </div>
        </div>
      </div>
      <input class="file" type="file" name="image" required>
      <button type="text" class="submit">submit</button>
  </div>
  <%- include("footer") -%>
