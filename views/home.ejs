<div class="postsoverflow">
  <div class="post" id="posts" class="md-lg-3 md-sm-12">
    <%items.forEach(function(item){ %>
    <div class="postbox">
      <h3><%=item.username%></h3>
      <div class="container">
        <div class="row">
          <div class="col-md">
            <img class="postimage" src="data:image/<%=item.img.contentType%>;base64,
                                               <%=item.img.data.toString('base64')%>">
          </div>
          <div class="col-md-7">
            <h5 class="name"> <%=item.discription%></h5>
            <h5 class="name">Likes : <%=item.likes.num%></h5>
          </div>
        </div>
      </div>
    </div>
    <%}) %>
  </div>
</div>

