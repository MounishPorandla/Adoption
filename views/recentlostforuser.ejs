            <div class="col-md-6">
              <label>Address</label>
            </div>
            <div class="col-md-6">
              <p><%=item.address%></p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <label>State</label>
            </div>
            <div class="col-md-6">
              <p><%=item.state%></p>
            </div>
          </div>
