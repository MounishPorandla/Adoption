  <div class="container emp-profile">
    <%items.forEach(function(item){ %>
    <%if(check===item.name){%>
    <%if(item.status!=="adopted"){%>
    <form class="" action="/requestindividual" method="post">
      <button type="submit" name="button" class="btn btn-primary reqbtn" value="<%=user%>*<%=check%>">Request <span class="iconify" data-icon="ant-design:user-add-outlined" style="color: white; font-size: 20px;"></span></button>
    </form>
    <%}%>
    <form method="post">
      <div class="row">
        <div class="col-md-4">
          <div class="profile-img">
            <img src="data:image/<%=item.img.contentType%>;base64,
    <%=item.img.data.toString('base64')%>">

  </div>

  </div>
  <div class="col-md-6">
    <div class="profile-head">
      <h5>
        <%=item.name%>
      </h5>
      <h6>
        Need Some Love
      </h6>
      <p class="proile-rating"> <span></span></p>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">More Info</a>
